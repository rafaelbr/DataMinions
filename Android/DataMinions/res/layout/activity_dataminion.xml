<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:id="@+id/dminfoLayout">

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/topborder"
            android:id="@+id/gridLayout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgMinion"
                android:src="@drawable/no_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_rowSpan="3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txtDMName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/miniontype_label"
                android:id="@+id/textView14"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDMType"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

    </GridLayout>

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/basepanel"
            android:layout_below="@+id/gridLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/txtLocation"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:lines="3"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_columnSpan="2"
                    android:layout_marginRight="50dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/minionfound_label"
                    android:id="@+id/textView15"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

            <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="230dp"
                    android:id="@+id/scrollView"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:fillViewport="false"
                    android:layoutMode="opticalBounds"
                    android:focusable="false"
                    >

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/txtDesc"
                            android:layout_columnSpan="2"
                            android:minLines="10"
                            />
            </ScrollView>
    </GridLayout>
</RelativeLayout>